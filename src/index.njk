{% extends '_templates/base.njk' %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}Dolores Martinez Prints{% endblock %}

{% block page_description %}Dolores Martinez print Website.{% endblock %}



{% block content %}
<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Latest Events</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      {% for festivals in events.festivals %}
        <h3 class="text-start ps-0"><a href="{{ festivals.event_link }}" target="_blank">{{ festivals.event_name }}</a></h3>
        <p class="text-start ps-0">{{ festivals.day }}</p>
        <hr class="ps-0">
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}