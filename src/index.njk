{% extends '_templates/base.njk' %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}Dolores Martinez Prints{% endblock %}

{% block page_description %}Dolores Martinez print Website.{% endblock %}



{% block content %}
<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="ArtistStatement">Artist Biography</h2>
      <hr class="ps-0">
      {{ prose(personal.statements[1].post) }}
      <hr class="ps-0">
      <h2 class="ArtistStatement my-3">Works</h2>
      <hr class="ps-0">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for works in printworks.works %}
        <div class="col">
          <div class="card">
            <a href="works/{{works.slug}}.html"><img src="img/{{works.print_image}}" class="card-img-top" alt="{{works.description}}"></a>
            <div class="card-body">
              <a class="link-dark link-body-emphasis-hover link-underline-opacity-0 link-underline-opacity-75-hover" href="works/{{works.slug}}.html">
                <h5 class="card-title titles">{{works.print_name}}</h5>
              </a>
            </div>
          </div>
        </div>
        {%endfor%}
      </div>
      <hr class="ps-0">
      <h2 class="ArtistStatement mt-5">Latest Events</h2>
      <hr class="ps-0">
      {% for festivals in events.festivals %}
        <h3 class="text-start ps-0 titles"><a class="link-dark link-body-emphasis-hover link-underline-opacity-0 link-underline-opacity-75-hover" href="{{ festivals.event_link }}" target="_blank">{{ festivals.event_name }}</a></h3>
        <p class="text-start ps-0 body">{{ festivals.day }}</p>
        <hr class="ps-0">
      {% endfor %}
      <h2 class="ArtistStatement">Exhibitions</h2>
      <hr class="ps-0">
      {% for exhibitions in events.exhibitions %}
        <h3 class="text-start ps-0 titles">{{ exhibitions.event_name }}</h3>
        <p class="text-start ps-0 body">{{ exhibitions.day }}</p>
        <hr class="ps-0">
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}